# Default stuff...
Mixer.Debug.MPI
SCF.Mixer.Weight 0.01
SCF.Mixer.History 6

# Define all the mixing methods used
%block SCF.Mixers
  pulay
  pulay-GR
%endblock

%block SCF.Mixer.pulay
  method pulay
  iterations 12
  next pulay-GR
%endblock

%block SCF.Mixer.pulay-GR
  method pulay
  variant GR
  iterations 12
  next pulay
%endblock

SystemName          Linear Fe3 cluster.
SystemLabel         mix_pulay
NumberOfAtoms       3
NumberOfSpecies     1

%block ChemicalSpeciesLabel
 1  26  fe_nc      # Species index, atomic number, species label
%endblock ChemicalSpeciesLabel

LatticeConstant    1.0 Bohr
%block LatticeVectors
 12.000   0.000   0.000
  0.000  12.000   0.000
  0.000   0.000  20.000
%endblock LatticeVectors

AtomicCoordinatesFormat  NotScaledCartesianBohr
%block AtomicCoordinatesAndAtomicSpecies
  0.000   0.000   3.644  1
  0.000   0.000   0.000  1
  0.000   0.000  -3.644  1
%endblock AtomicCoordinatesAndAtomicSpecies
%block AtomicCoordinatesOrigin
  0.000   0.000   0.000
%endblock AtomicCoordinatesOrigin

PAO.BasisType    split
PAO.SplitNorm    0.15
%block PAO.BasisAndPSlmax
  1   26   2   3
    0    2
      5.30   0.00
      1.00   1.00
    1    1
      5.30   0.00
      1.00   1.00
    2    2
      4.50   0.00
      1.00   1.00
%endblock PAO.BasisAndPSlmax

MeshCutoff        150. Ry

ElectronicTemperature   0.1 eV

MD.TypeOfRun      CG
MD.NumCGsteps     0

WriteMullikenPop  1

SpinPolarized     yes
NonCollinearSpin  yes 

DM.UseSaveDM      yes

%block DM.InitSpin
 1  +3.00     0.   0.   # atom,spin,theta,phi (deg)
 2  +1.50    90.   0.
 3  +3.00   180.   0.
%endblock DM.InitSpin


